mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin page-head(title, ...items)
	+b.page-head&attributes(attributes)
		.container
			+breadcrumb(...items)
			h1!= title


mixin sidebar(active,...items)
	+b.sidebar&attributes(attributes)
		+e.mob-title Содержание
			+icon(`chevron-down`)
		+e.body.d-lg-block
			if block
				block
			else
				ul
					each item,id in items
						li
							if (id+1 ==active)
								a.active(href="#")!=item
							else
								a(href="#")!=item